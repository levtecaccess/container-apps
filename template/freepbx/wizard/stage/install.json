{
  "api_version": "v1",
  "title": "{{FREEPBX_NAME}}",
  "wizard": [
    {
      "title": "{{FREEPBX_BASE_PAGE}}",
      "schema": {
        "http_port": {
          "title": "FreePBX HTTP Port",
          "type": "integer",
          "description": "{{FREEPBX_HTTP_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        },
        "sip_port": {
          "title": "FreePBX SIP Transport Port",
          "type": "integer",
          "description": "{{FREEPBX_SIP_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        }
      },
      "form": [
        "http_port",
        "sip_port"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "http_port": [
        "services.freepbx-server.ports[0]"
      ],
      "sip_port": [
        "services.freepbx-server.ports[1]"
      ]
    }
  }
}
