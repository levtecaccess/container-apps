{
  "api_version": "v1",
  "title": "{{FREEPBX_NAME}}",
  "wizard": [
    {
      "title": "{{FREEPBX_WEB_SERVER_PAGE}}",
      "schema": {
        "http_port": {
          "title": "FreePBX HTTP Port",
          "type": "integer",
          "description": "{{FREEPBX_HTTP_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        },
        "https_port": {
          "title": "FreePBX Secure HTTP Port",
          "type": "integer",
          "description": "{{FREEPBX_HTTPS_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        }
      },
      "form": [
        "http_port",
        "https_port"
      ]
    },
    {
      "title": "{{FREEPBX_PBX_SERVER_PAGE}}",
      "schema": {
        "pjsip_port": {
          "title": "FreePBX PJSIP Transport Port",
          "type": "integer",
          "description": "{{FREEPBX_PJSIP_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        },
        "sip_port": {
          "title": "FreePBX SIP Transport Port",
          "type": "integer",
          "description": "{{FREEPBX_SIP_PORT_DESC}}",
          "minimum": 1,
          "maximum": 65535,
          "required": true
        }
      },
      "form": [
        "pjsip_port",
        "sip_port"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "http_port": [
        "services.freepbx-server.ports[0]"
      ],
      "https_port": [
        "services.freepbx-server.ports[1]"
      ],
      "pjsip_port": [
        "services.freepbx-server.ports[2]"
      ],
      "sip_port": [
        "services.freepbx-server.ports[3]"
      ]
    }
  }
}
