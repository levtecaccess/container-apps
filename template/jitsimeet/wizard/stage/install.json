{
  "api_version": "v1",
  "title": "{{JITSIMEET_NAME}}",
  "wizard": [
    {
      "title": "{{JITSIMEET_BASE_PAGE}}",
      "schema": {
        "http_port": {
          "type": "integer",
          "title": "HTTP Port",
          "description": "{{JITSIMEET_HTTP_PORT_DESC}}",
		  "required": true,
          "maximum": 65535
        },
        "https_port": {
          "type": "integer",
          "title": "HTTPS Port",
          "description": "{{JITSIMEET_HTTPS_PORT_DESC}}",
		  "required": true,
          "maximum": 65535
        }
      },
      "form": [
        "*"
      ]
    }
  ],
  "binding": {
    "type": "yaml",
    "file": "docker-compose.yml",
    "data": {
      "http_port": [
        "web.ports[0]",
        "web.environment.HTTP_PORT"
      ],
      "https_port": [
        "web.environment.HTTPS_PORT",
        "web.ports[1]"
      ]
    }
  }
}
